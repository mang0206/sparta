Content-Type: application/json

{
  "couponName": "신규 가입 1000원 할인",
  "discountType": "FIXED",
  "discountValue": 1000,
  "minOrderAmount": 5000,
  "startDate": "2024-01-01T00:00:00",
  "endDate": "2025-12-31T23:59:59",
